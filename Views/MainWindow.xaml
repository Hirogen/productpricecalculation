<Window x:Class="ProductPriceCalculator.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:ProductPriceCalculator.ViewModels"
        xmlns:views="clr-namespace:ProductPriceCalculator.Views"
        xmlns:converters="clr-namespace:ProductPriceCalculator.Converters"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Converters -->
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <!-- View to ViewModel mapping -->
        <DataTemplate DataType="{x:Type viewmodels:ProductsViewModel}">
            <views:ProductsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CalculationViewModel}">
            <views:CalculationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:OperatingCostsViewModel}">
            <views:OperatingCostsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:PortfolioViewModel}">
            <views:PortfolioView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CategoriesViewModel}">
            <views:CategoriesView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CompaniesViewModel}">
            <views:CompaniesView />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/><!-- STATUS BAR ROW -->
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="{Binding MenuLanguage}">
                <MenuItem Header="{Binding MenuEnglish}" Command="{Binding SwitchToEnglishCommand}"/>
                <MenuItem Header="{Binding MenuGerman}" Command="{Binding SwitchToGermanCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" Background="#2D2D30" CornerRadius="5" Margin="0,0,10,0">
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="{Binding NavWorkflows}" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Foreground="White"
                               Padding="15,20,15,15"/>

                    <!-- Navigation Buttons -->
                    <Button Content="{Binding NavProducts}" 
                            Command="{Binding NavigateToProductsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    
                    <Button Content="{Binding NavProductPortfolio}" 
                            Command="{Binding NavigateToPortfolioCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    
                    <Button Content="{Binding NavOperatingCosts}" 
                            Command="{Binding NavigateToOperatingCostsCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    
                    <Button Content="{Binding NavCategories}" 
                            Command="{Binding NavigateToCategoriesCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                    
                    <Button Content="{Binding NavCompanies}" 
                            Command="{Binding NavigateToCompaniesCommand}"
                            Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                    <ContentControl Content="{Binding CurrentViewModel}"/>
                </ScrollViewer>
            </Border>
        </Grid>
        
        <!-- STATUS BAR (NEW) -->
        <Border Grid.Row="2" 
                Background="{Binding StatusBarVM.NotificationBackground}"
                Visibility="{Binding StatusBarVM.IsVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                Padding="15,10"
                BorderThickness="0,1,0,0"
                BorderBrush="#CCCCCC">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Icon -->
                <TextBlock Grid.Column="0"
                           Text="{Binding StatusBarVM.NotificationIcon}"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{Binding StatusBarVM.NotificationForeground}"
                           Margin="0,0,15,0"
                           VerticalAlignment="Center"/>

                <!-- Message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusBarVM.NotificationMessage}"
                           FontSize="14"
                           Foreground="{Binding StatusBarVM.NotificationForeground}"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>

                <!-- Dismiss Button -->
                <Button Grid.Column="2"
                        Content="✕"
                        Command="{Binding StatusBarVM.DismissCommand}"
                        Background="Transparent"
                        Foreground="{Binding StatusBarVM.NotificationForeground}"
                        BorderThickness="0"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="10,0"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        ToolTip="Dismiss"/>
            </Grid>
        </Border>
    </Grid>
</Window>
